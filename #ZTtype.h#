#ifndef ZTTYPE_H
#define ZTTYPE_H

#include"vector.h"

enum NodeType{
  CELLCENTER,            // ‘½Ú‘µã‘ÔÚ‘½Ú‘µã‘ÄÚ‘²¿
  MESHNODE,           // ‘½Ú‘µã‘ÔÚ‘Íø‘¸ñ‘½ç‘Ãæ‘ÉÏ
};

enum SimuType{
  Diffuse_1D,
  Convective_Diffusion_1D,
  
  Diffuse_2D,
  Convective_Diffusion_2D,
  
  Diffuse_3D,
  Convective_Diffusion_3D,
};

struct SimuInfo{
  double coorX;
  double xw;
  double xe;
  double cellLenght;
  double labdw;
  double labde;
  double hpw;
  double hpe;
  double areap;
  double areaw;
  double areae;
  double heatCap;
  double density;
};

#typedef std::vector<simuInfo> SimuInfo;
#typedef std::vector< std::vector<double> > SimuRes;

struct LocalParam
{
  double heatCap;
  double density;
};

#typedef std::vector<LocalParam> ZTLocalParam; 

struct ZTGlobalParam
{
  NodeType type;
  double f;
  double Sc;
  double Sp;           // heat source const part
  double deltaT;       // time step
};

#endif
